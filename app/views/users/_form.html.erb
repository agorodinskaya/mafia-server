
<% if flash[:errors] %>
<strong>Please correct the following errors:</strong>
<ol>
  <% flash[:errors].each do |e| %>
  <li><%= e %></li>
  <% end %>
</ol>
<% end %>


<div class="form-group userForm">
  <%= form_for(@user, :html => {:multipart => true}) do |f| %>
    <%= f.label :name%>
    <%= f.text_field :name,class: "form-control one" %>
    <br>
    <%= f.label :password %>
    <%= f.password_field :password,class: "form-control one" %>
    <br>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation,class: "form-control one" %>
    <br>
    <% f.label :image %>
    <%= f.cl_image_upload :image,class: "form-control one"%>
    <br><br>
    <%= f.submit class:"btn btn-success"%>
  <% end %>
</div>
